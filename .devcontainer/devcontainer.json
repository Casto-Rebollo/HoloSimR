{
    "name": "R Data Science Codespace",
    "image": "mcr.microsoft.com/devcontainers/universal:latest",
    "features": {
        "ghcr.io/devcontainers/features/r:1": {}
        // You can specify an R version if you want, e.g., "ghcr.io/devcontainers/features/r:1": { "version": "4.3.2" }
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "REditorSupport.r"
            ]
        }
    },
    "postCreateCommand": "R -e 'install.packages(\"languageserver\", repos = \"https://cran.rstudio.com\")'; R -e 'install.packages(\"httpgd\", repos = \"https://cran.rstudio.com\")'"
}
